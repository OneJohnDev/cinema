{% extends 'cinema/index.html.twig' %}

{% block title %}Liste des réalisateurs {% endblock %}


{% block sideMenu %}
    <div class="container">

        <div class="row">

            <div class="col-md-3">
                <p class="lead">Cinéma</p>
                <div class="list-group">
                    <a href="{{path("app_cinema")}}" class="list-group-item">Films</a>
                    <a href="{{path("app_cinema_liste_realisateurs")}}" class="list-group-item active">Réalisateurs</a>
                </div>
            </div>
{% endblock %}
{% block content %}



            <div class="col-md-9">
			
				<h2>Liste des réalisateurs</h2>
				
				<br />
                {% for realisateur in realisateurs %}
				<div class="well">
                    <div class="row">
                        <div class="col-md-12">
                            <strong>{{realisateur.nomRealisateur}}</strong> ({{ realisateur.getAge() }} ans)<br />
							<br />
							<p>Le wiki</p>
							<hr />
							<div class="text-right">
								<a href="{{ path("app_cinema_realisateur", {id: realisateur.id} ) }}"class="btn btn-success">Voir ses films</a>
							</div>
						</div>
                    </div>
				</div>
                {% endfor %}
			
				
				
            </div>

        </div>

    </div>

{% endblock %}
