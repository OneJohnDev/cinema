{% extends 'base.html.twig' %}

{% block title %}CRUD Film{% endblock %}

{% block content %}
<h1> Back-end: CRUD Film </h1>
<h2>Ajouter un Film</h2>
{{form_start(form)}}
{{ form_row(form.titre_film,{
        'label' : "Titre",
        'attr' : {
            'placeholder' : "Ex : Retour vers le futur"
        }
    })
}}
{{ form_row(form.synopsis,{
        'label' : "Synopsis",      
    })
}}

{{ form_row(form.date_sortie,{
        'label' : "Date de sortie",      
    })
}}

{{ form_row(form.Realisateur)}}
{{ form_row(form.Genre)}}

{{ form_widget(form.submit,{
        'label' : "Ajouter",
    })
}}




{{form_end(form)}}

<hr>
<h2> Liste des films </h2>
<table>
    {% for film in all_films %}
    <tr>

        <td>{{film.titreFilm}} - </td>
        <td> {{film.synopsis}} </td>
        <td> {{film.realisateur.nomRealisateur}} </td>
        <td> {{film.genre.nomGenre}} </td>
        <td><a href="{{ path("app_film_update",{id: film.id}) }}"> Update</a></td>
        <td><a href="{{ path("app_film_delete",{id: film.id}) }}"> Delete</a></td> 
        

    </tr>
    {% endfor %}
</table>
{% endblock %}
